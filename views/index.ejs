<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Patient</title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <style>
    body {
      padding: 20px;
      margin: 0;
      font-family: Arial, sans-serif;
      background-color: #f8f9fa; /* Background color */
    }

    .container {
      margin-top: 20px;
    }

    table {
      width: 100%;
      margin-top: 20px;
      border-collapse: collapse;
    }

    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
    }

    th {
      background-color: #007bff;
      color: #fff;
    }
  </style>
</head>
<body>
  <div class="navbar">
    <a href="/">Home Page</a>
    <a href="/create-patient">Create Patient</a>
    <a href="/login">Log Out</a>
  </div>

  <div class="container">
    <h2>Create Patient</h2>
    <!-- Add your content for the Create Patient page here -->

    <!-- CRUD Grid -->
    <table>
      <thead>
        <tr>
          <th>Creator ID</th>
          <th>Creator Name</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Birthdate</th>
          <th>Zipcode</th>
          <th>State</th>
          <th>Phone Number</th>
          <th>Create Date</th>
          <th>Insurance Type</th>
          <th>Test Type</th>
          <th>Doctor Service</th>
          <th>Lab Name</th>
          <th>Sample Status</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <!-- Example data, replace with actual data from your server -->
        <% const patients = [
          { CreatorId: '1', CreatorName: 'John Doe', FirstName: 'Alice', LastName: 'Smith', Birthdate: '1990-01-01', Zipcode: '12345', State: 'California', PhoneNumber: '555-1234', CreateDate: '2023-11-10', InsuranceType: 'Health Insurance', TestType: 'Blood Test', DoctorService: 'General Check-up', LabName: 'ABC Lab', SampleStatus: 'Pending' },
          { CreatorId: '2', CreatorName: 'Jane Doe', FirstName: 'Bob', LastName: 'Johnson', Birthdate: '1985-05-20', Zipcode: '54321', State: 'New York', PhoneNumber: '555-5678', CreateDate: '2023-11-11', InsuranceType: 'Life Insurance', TestType: 'X-ray', DoctorService: 'Specialized Exam', LabName: 'XYZ Lab', SampleStatus: 'Completed' }
        ]; %>

        <% patients.forEach(patient => { %>
          <tr>
            <td><%= patient.CreatorId %></td>
            <td><%= patient.CreatorName %></td>
            <td><%= patient.FirstName %></td>
            <td><%= patient.LastName %></td>
            <td><%= patient.Birthdate %></td>
            <td><%= patient.Zipcode %></td>
            <td><%= patient.State %></td>
            <td><%= patient.PhoneNumber %></td>
            <td><%= patient.CreateDate %></td>
            <td><%= patient.InsuranceType %></td>
            <td><%= patient.TestType %></td>
            <td><%= patient.DoctorService %></td>
            <td><%= patient.LabName %></td>
            <td><%= patient.SampleStatus %></td>
            <td>
              <button class="btn btn-warning btn-sm">Edit</button>
              <button class="btn btn-danger btn-sm">Delete</button>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
