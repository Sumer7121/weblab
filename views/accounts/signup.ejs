<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Signup</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
        crossorigin="anonymous">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"
        integrity="sha384-lC+JuoU1psLUn9upKxjTqFsv3agPPkODD1VlXbu2KxOO2rtW2IfyZn3EcV2OIlU7"
        crossorigin="anonymous">

    <!-- Your custom CSS -->
    <link rel="stylesheet" href="/stylesheets/users.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <div class="navbar">
        <a href="/">Home Page</a>
        <a href="/create-patient">Create Patient</a>
        <a href="/accounts/signup">Users</a>
        <a href="/accounts/login">Log Out</a>
    </div>
    <div class="container">
        <div class="col-sm-6">
            <h1><span class="fa fa-sign-in"></span> Signup</h1>

            <!-- show any messages that come back with authentication -->
            <% if (message.length > 0) { %>
            <div class="alert alert-danger"><%= message %></div>
            <% } %>

            <form action="/accounts/signup" method="post">
                <div class="form-group">
                    <label>Email</label>
                    <input required type="text" class="form-control" name="email">
                </div>
                <div class="form-group">
                    <label>First Name</label>
                    <input required type="text" class="form-control" name="firstName">
                </div>
                <div class="form-group">
                    <label>Last Name</label>
                    <input required type="text" class="form-control" name="lastName">
                </div>
                <div class="form-group">
                    <label>Role</label>
                    <select required class="form-control" name="role">
                        <option value="" disabled selected>Choose the role</option>
                        <option value="Admin">Admin</option>
                        <option value="Data entry specialist">Data entry specialist</option>
                        <option value="Quality control">Quality control</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Password</label>
                    <input required type="password" class="form-control" name="password">
                </div>
                <button type="submit" class="btn btn-warning btn-lg">Signup</button>
            </form>
        </div>
    </div>
    <div class="container">
        <h1 class="mt-4">User Details</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(function(user) { %>
                <tr>
                    <td><%= user.email %></td>
                    <td><%= user.firstName %></td>
                    <td><%= user.lastName %></td>
                    <td><%= user.role %></td>
                    <td>
                        <a href="/accounts/edit/<%= user._id %>" class="btn btn-primary btn-sm">Edit</a>
                        <form action="/accounts/delete/<%= user._id %>" method="post" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this user?')">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>

    <!-- Bootstrap JS and Popper.js (if needed) -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
    <scriptsrc="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>
</body>

</html>